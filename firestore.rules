rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null; // Allow user registration
    }
    
    // Allow all authenticated users to read user profiles for team coordination
    match /users/{userId} {
      allow read: if request.auth != null;
    }
    
    // Allow access to projects and roadmaps for team collaboration
    match /projects/{projectId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    match /roadmaps/{roadmapId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Allow chat messages for team communication
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Allow real-time updates for coordination
    match /coordination/{docId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Allow system/AI messages and updates
    match /system/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend can write system messages
    }
    
    // Temporary: Allow all reads/writes for development and testing
    // TODO: Tighten security for production
    match /{document=**} {
      allow read, write: if true; // Open for testing - secure for production!
    }
  }
}